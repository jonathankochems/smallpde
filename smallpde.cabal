executable vectorBench
  -- Modules exported by the library.
  Main-is:      UnitBench.hs
  
  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:    
  
  -- Other library packages from which modules are imported.
  build-depends:       base >=4 && <5,
                       template-haskell >= 2.11,
                       deepseq,
                       vector,
                       primitive,
                       primitive-simd,
                       ghc-prim,
                       criterion,
                       smallpde
  
  -- Directories containing source files.
  hs-source-dirs:      haskell/bench      
  
  -- Base language which the package is written in.
  default-language:    Haskell2010
  
  if flag(nooptimisations) 
    ghc-options:  -rtsopts -fllvm -Wall
  else
    if flag(perf) 
        ghc-options:  -rtsopts -optc-march=native -Odph -fno-liberate-case -funfolding-use-threshold1000 -funfolding-keeness-factor1000 -fllvm -optlo-O3 -optc-ffast-math -Wall -g -debug -rtsopts -optc-fno-omit-frame-pointer -optc-g -optc-fverbose-asm
    else
        ghc-options:  -rtsopts -optc-march=native -Odph -fno-liberate-case -funfolding-use-threshold1000 -funfolding-keeness-factor1000 -fllvm -optlo-O3 -optc-ffast-math -Wall



