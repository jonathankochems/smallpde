library
  -- Modules exported by the library.
  Exposed-Modules:      SmallpdeVector,
                        SmallpdeSIMD,
                        SolverCodeGen,
                        Data.Vector.Unboxed.SIMD,
                        Data.Vector.Unboxed.SIMD.Internal
                        Data.Vector.AcceleratedFor.Internal
                        Data.Vector.AcceleratedFor.Equivalence
  
  -- Modules included in this library but not exported.
  Other-Modules:        VectorInst
                        
  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:    
  C-sources: haskell/src/Debug.c
  
  -- Other library packages from which modules are imported.
  build-depends:       base >=4 && <5,
                       template-haskell >= 2.11,
                       deepseq,
                       vector,
                       primitive,
                       primitive-simd,
                       mtl,
                       ghc-prim
  
  -- Directories containing source files.
  hs-source-dirs:      haskell/src      
  
  -- Base language which the package is written in.
  default-language:    Haskell2010
  if flag(nooptimisations) 
    ghc-options:  -fllvm -Wall
  else
    if flag(dumpassembly) 
      ghc-options: -optc-S -keep-tmp-files -tmpdir/tmp/ghc -optc-march=native -Odph -fno-liberate-case -funfolding-use-threshold1000 -funfolding-keeness-factor1000 -fllvm -optlo-O3 -optc-ffast-math -Wall
    else
        if flag(perf) 
          ghc-options:  -optc-march=native -Odph -fno-liberate-case -funfolding-use-threshold1000 -funfolding-keeness-factor1000 -fllvm -optlo-O3 -optc-ffast-math -Wall -g -optc-fno-omit-frame-pointer -optc-g -optc-fverbose-asm
        else
          if flag(dumpsplices) 
            ghc-options: -fllvm -optlo-O3 -optc-ffast-math -Wall -ddump-splices
          else
            ghc-options: -optc-march=native -Odph -fno-liberate-case -funfolding-use-threshold1000 -funfolding-keeness-factor1000 -fllvm -optlo-O3 -optc-ffast-math -Wall

