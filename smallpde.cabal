Flag Nooptimisations
  Description: Use no optimsations for fast compile but slow execution
  Default: False
  Manual: True

executable fdm-haskell
  -- Modules exported by the library.
  Main-is:      Main.hs
  
  -- Modules included in this library but not exported.
  Other-Modules:        SmallpdeVector
                        VectorInst 
  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:    
  
  -- Other library packages from which modules are imported.
  build-depends:       base >=4 && <5,
                       template-haskell,
                       deepseq,
                       vector,
                       primitive,
                       primitive-simd,
                       ghc-prim
  
  -- Directories containing source files.
  hs-source-dirs:      haskell/src      
  
  -- Base language which the package is written in.
  default-language:    Haskell2010
  
  if flag(nooptimisations) 
    ghc-options:  -rtsopts -fllvm -Wall
  else 
    ghc-options:  -rtsopts -optc-march=native -Odph -fno-liberate-case -funfolding-use-threshold1000 -funfolding-keeness-factor1000 -fllvm -optlo-O3 -optc-ffast-math -Wall
  

